@model IEnumerable<MovieApp.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Home <i class="fa-solid fa-house fa-xs"></i></h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New <i class="fa-solid fa-plus"></i></a>
</p>


<div class="container">
    <div class="row gx-3">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card my-3" style="width:18rem;">
                    <img src="~/movieImg/@item.ImageUrl" class="card-img-top object-fit-cover" />
                    <div class="card-body">
                        <h5 class="card-title fw-bolder">
                            @Html.DisplayFor(modelItem => item.Title)
                        </h5>
                        @* <span>@(++count)</span> *@
                        <div class="">
                            <span class="card-text fs-6 fst-italic">Released - @Html.DisplayFor(modelItem => item.ReleaseDate)</span>
                            <div class="fs-6 fst-italic">Genre - @Html.DisplayFor(modelItem => item.Genre)</div>
                            <span class="fw-bolder">Price - $@Html.DisplayFor(modelItem => item.Price)</span>
                        </div>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
